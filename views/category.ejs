
<%- include('partials/header') %>

<main class="category-page">
    <div class="page-header">
        <div class="container">
            <div class="breadcrumb">
                <a href="/">Home</a> / <a href="/categories">Categories</a> / <span><%= category.name %></span>
            </div>
            <h1><%= category.name %></h1>
            <p><%= category.description %></p>
        </div>
    </div>
    
    <section class="category-content">
        <div class="container">
            <div class="category-info">
                <p class="results-count">Showing <%= products.length %> products</p>
            </div>
            
            <% if (products.length > 0) { %>
                <div class="products-grid">
                    <% products.forEach(product => { %>
                        <div class="product-card">
                            <div class="product-image">
                                <a href="/product/<%= product.id %>">
                                    <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                                </a>
                                <% if (product.featured) { %>
                                    <span class="badge">Featured</span>
                                <% } %>
                            </div>
                            <div class="product-info">
                                <p class="product-brand"><%= product.brand %></p>
                                <h3 class="product-name">
                                    <a href="/product/<%= product.id %>"><%= product.name %></a>
                                </h3>
                                <p class="product-description"><%= product.description.substring(0, 80) %>...</p>
                                <p class="product-price">$<%= product.price.toFixed(2) %></p>
                                <a href="/product/<%= product.id %>" class="btn btn-outline">View Details</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="no-products">
                    <i class="fas fa-box-open"></i>
                    <p>No products available in this category at the moment.</p>
                    <a href="/categories" class="btn btn-primary">Browse Other Categories</a>
                </div>
            <% } %>
        </div>
    </section>
</main>

<%- include('partials/footer') %>
