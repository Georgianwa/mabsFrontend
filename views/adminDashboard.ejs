<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Mabs Electronics Limited</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="admin-page">
    <header class="admin-header">
        <div class="container">
            <h1><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h1>
            <nav class="admin-nav">
                <ul>
                    <li><a href="/admin/dashboard" class="active">Dashboard</a></li>
                    <li><a href="/admin/products">Products</a></li>
                    <li><a href="/admin/categories">Categories</a></li>
                    <li><a href="/admin/brands">Brands</a></li>
                    <li><a href="/admin/logout" style="background-color: var(--error-color);">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a></li>
                </ul>
            </nav>
        </div>
    </header>
    
    <main class="admin-content">
        <div class="container">
            <div class="admin-stats">
                <div class="stat-card">
                    <i class="fas fa-box"></i>
                    <h3><%= stats.totalProducts %></h3>
                    <p>Total Products</p>
                </div>
                <div class="stat-card" style="background: linear-gradient(135deg, #ff9900, #e55a00);">
                    <i class="fas fa-list"></i>
                    <h3><%= stats.totalCategories %></h3>
                    <p>Categories</p>
                </div>
                <div class="stat-card" style="background: linear-gradient(135deg, #28a745, #1e7e34);">
                    <i class="fas fa-tags"></i>
                    <h3><%= stats.totalBrands %></h3>
                    <p>Brands</p>
                </div>
                <div class="stat-card" style="background: linear-gradient(135deg, #dc3545, #bd2130);">
                    <i class="fas fa-star"></i>
                    <h3><%= stats.featuredProducts %></h3>
                    <p>Featured Products</p>
                </div>
            </div>
            
            
            <div class="admin-card">
                <h2>Recent Products</h2>
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Featured</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% recentProducts.forEach(product => { %>
                            <tr>
                                <td><img src="<%= product.images && product.images[0] %>" alt="<%= product.name %>"></td>
                                <td><%= product.name %></td>
                                <td><%= product.brand %></td>
                                <td>₦<%= product.price.toLocaleString() %></td>
                                <td><%= product.category %></td>
                                <td><%= product.featured ? '✓' : '✗' %></td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/admin/products/edit/<%= product._id %>" class="btn btn-small btn-edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button onclick="deleteProduct('<%= product._id %>')" class="btn btn-small btn-delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    
    <script>
        function deleteProduct(id) {
            if (confirm('Are you sure you want to delete this product?')) {
                fetch(`/admin/products/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Product deleted successfully');
                        location.reload();
                    } else {
                        alert('Error deleting product');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting product');
                });
            }
        }
    </script>
</body>
</html>