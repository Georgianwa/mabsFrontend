<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
          crossorigin="anonymous" 
          referrerpolicy="no-referrer" />
    
    <!-- Your Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Cart Functions - Load early -->
    <script src="/js/cart.js"></script>

    <!-- Pass phone number to cart.js -->
     <script>
     window.PHONE_NUMBER = '<%= typeof phoneNumber !== "undefined" ? phoneNumber : process.env.PHONE_NUMBER %>';
     </script>
     
</head>
<body>
    <header class="site-header">
        <!-- Top Bar with Contact Info -->
        <div class="top-bar">
            <div class="container">
                <div class="top-bar-content">
                    <div class="contact-info">
                        <span>
                            <i class="fas fa-phone"></i> phone number
                        </span>
                        <span>
                            <i class="fas fa-envelope"></i> sales@mabselectronics.com
                        </span>
                    </div>
                    <div class="top-links">
                        <a href="/cart">
                            <i class="fas fa-shopping-cart"></i> My Cart 
                            <span class="cart-count" style="
                                background: #ff0040ff;
                                color: white;
                                padding: 2px 8px;
                                border-radius: 12px;
                                font-size: 12px;
                                font-weight: bold;
                                margin-left: 5px;
                                display: none;
                            ">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Header with Logo and Search -->
        <div class="main-header">
            <div class="container">
                <div class="header-content">
                    <div class="logo">
                        <a href="/">
                            <img src="/images/mabsLogo.jpg" alt="Mabs Electronics Limited Logo">
                        </a>
                    </div>
                    
                    <div class="search-bar">
                        <form action="/search" method="GET">
                            <input type="text" name="q" placeholder="Search for products..." required>
                            <button type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>
                    
                    <div class="header-actions">
                        <a href="/cart" class="header-btn">
                            <i class="fas fa-shopping-cart"></i>
                            <span>Cart</span>
                            <span class="cart-count" style="
                                position: absolute;
                                top: -5px;
                                right: -5px;
                                background: #ff0040ff;
                                color: white;
                                padding: 2px 6px;
                                border-radius: 10px;
                                font-size: 11px;
                                font-weight: bold;
                                display: none;
                            ">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Navigation Menu -->
        <%- include('navigation') %>
    </header>
    
    <!-- Mobile menu overlay -->
    <div class="mobile-menu-overlay" id="mobileMenuOverlay"></div>